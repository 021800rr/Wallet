<form method="post"
      id="backup_delete{{ loop.index }}"
      action="{{ path('backup_delete', {'id': backup.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ backup.id) }}">
    <input type="image" src="{{ asset('images/delete.png') }}" alt="delete" width="14" height="14"/>
</form>
