{% extends 'base.html.twig' %}
{% block body %}
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th>{{ 'Contractor'|trans }}</th>
                <th>{{ 'Account'|trans }}</th>
                <th class="text-center" colspan="2">{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for contractor in paginator %}
                <tr>
                    <td>{{ contractor.description }}</td>
                    <td>{{ contractor.account }}</td>
                    <td class="text-center">{{ include('contractor/_edit_a.html.twig') }}</td>
                    <td class="text-center">{{ include('contractor/_delete_form.html.twig') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% set PATH = 'contractor_index' %}
    {{ include('paginator.html.twig') }}
{% endblock %}

