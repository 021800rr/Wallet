<form method="post"
      action="{{ path('contractor_delete', {'id': contractor.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');"
      id="contractor_delete{{ loop.index }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contractor.id) }}">
    <input type="image" src="{{ asset('images/delete.png') }}" alt="delete" width="14" height="14"/>
</form>
