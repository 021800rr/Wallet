<nav>
    <ul class="pagination">
        <li class="page-item{% if previous < 0 %} disabled{% endif %}">
            <a class="page-link" href="{{ path(PATH, { offset: previous }) }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="page-item{% if next >= paginator|length %} disabled{% endif %}">
            <a class="page-link" href="{{ path(PATH, { offset: next }) }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
