{% extends 'base.html.twig' %}
{% block body %}
    <table class="table table-hover table-sm">
        <thead>
        <tr>
            <th>{{ 'Date'|trans }}</th>
            <th class="text-end">{{ 'Amount'|trans }}</th>
            <th class="text-end">{{ 'Balance'|trans }}</th>
            <th class="ps-4">{{ 'Contractor'|trans }}</th>
            <th class="ps-4">{{ 'Description'|trans }}</th>
            <th class="text-center" colspan="3">{{ 'Actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for pln in pager %}
            <tr>
                <td>{{ pln.date|date("Y-m-d") }}</td>
                <td class="text-end row_money_amount" id="search_amount{{ loop.index }}">{{ pln.amount }}</td>
                <td class="text-end row_money" id="search_balance{{ loop.index }}">{{ pln.balance }}</td>
                <td class="ps-4" id="search_contractor{{ loop.index }}">{{ pln.contractor.description }}</td>
                <td class="ps-4" id="search_description{{ loop.index }}">{{ pln.description }}</td>
                <td class="text-center">{{ include('search/_is_consistent_form.html.twig') }}</td>
                <td class="text-center">{{ include('search/_edit_a.html.twig') }}</td>
                <td class="text-center">{{ include('search/_delete_form.html.twig') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% set PATH = 'search_result' %}
    {{ pagerfanta(pager) }}
{% endblock %}
