{% if chf.isConsistent == 1 %}
    <form method="post" id="chf_is_consistent{{ loop.index }}"
          action="{{ path('chf_is_consistent', {'id': chf.id, 'bool': 'false'}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('is_consistent' ~ chf.id) }}">
        <input type="image" class="submitter" src="{{ asset('images/ok.png') }}" alt="ok" width="14" height="14"/>
    </form>
{% else %}
    <form method="post" id="chf_is_consistent{{ loop.index }}"
          action="{{ path('chf_is_consistent', {'id': chf.id, 'bool': 'true'}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('is_consistent' ~ chf.id) }}">
        <input type="image" class="submitter" src="{{ asset('images/question.png') }}" alt="question" width="14" height="14"/>
    </form>
{% endif %}
