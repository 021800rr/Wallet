{% extends 'base.html.twig' %}
{% block body %}
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th>{{ 'Date'|trans }}</th>
                <th class="text-end">{{ 'Amount'|trans }}</th>
                <th class="text-end">{{ 'EUR'|trans }}</th>
                <th class="ps-4">{{ 'Contractor'|trans }}</th>
                <th>{{ 'Description'|trans }}</th>
                <th class="text-center" colspan="3">{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for eur in paginator %}
                <tr>
                    <td>{{ eur.date|date("Y-m-d") }}</td>
                    <td class="text-end row_eur_amount" id="eur_amount{{ loop.index }}">{{ eur.amount }}</td>
                    <td class="text-end row_eur" id="eur_balance{{ loop.index }}">{{ eur.balance }}</td>
                    <td class="ps-4" id="eur_contractor{{ loop.index }}">{{ eur.contractor.description }}</td>
                    <td id="eur_description{{ loop.index }}">{{ eur.description }}</td>
                    <td class="text-center">{{ include('eur/_is_consistent_form.html.twig') }}</td>
                    <td class="text-center">{{ include('eur/_edit_a.html.twig') }}</td>
                    <td class="text-center">{{ include('eur/_delete_form.html.twig') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% set PATH = 'eur_index' %}
    {{ include('paginator.html.twig') }}
{% endblock %}
